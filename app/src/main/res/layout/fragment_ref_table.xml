<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gold_background"
    tools:context=".refacContent.refFragments.RefTableFragment">

    <ImageView
        android:id="@+id/plant_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/plant_foregrand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/star_rock" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/megaways_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="150dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/last_background">

        <LinearLayout
            android:id="@+id/topElements"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/firstTop"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:background="@drawable/k_first_gold" />

            <ImageView
                android:id="@+id/secondTop"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:background="@drawable/a_gold" />

            <ImageView
                android:id="@+id/thirdTop"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:background="@drawable/k_first_gold" />

            <ImageView
                android:id="@+id/fourthTop"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:background="@drawable/q_golden" />

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainElements"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topElements">

            <LinearLayout
                android:id="@+id/firstColumn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/first"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/k_first" />

                <ImageView
                    android:id="@+id/second"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/a_first" />

                <ImageView
                    android:id="@+id/third"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/q_first" />

                <ImageView
                    android:id="@+id/fourth"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/first_parrot" />

                <ImageView
                    android:id="@+id/fifth"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/ten_first" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondColumn"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@+id/firstColumn"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/sixth"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/soun" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/seventh"
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:background="@drawable/q_second" />

                    <ImageView
                        android:id="@+id/eighth"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ten_second" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ninth"
                        android:layout_width="65dp"
                        android:layout_height="85dp"
                        android:background="@drawable/a_big" />

                    <ImageView
                        android:id="@+id/tenth"
                        android:layout_width="65dp"
                        android:layout_height="50dp"
                        android:background="@drawable/jey" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdColumn"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/secondColumn"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/eleventh"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/big_parrot" />

                <ImageView
                    android:id="@+id/twelveth"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/monkey" />

                <ImageView
                    android:id="@+id/thirteenth"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/nine" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/thirdColumn"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/fourteenth"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/pantera" />

                <ImageView
                    android:id="@+id/fifteenth"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/a_second" />

                <ImageView
                    android:id="@+id/sixteenth"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/second_parrot" />

                <ImageView
                    android:id="@+id/seventeenth"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/k_second" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/left_face"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/right_face"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/big_field"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/bigFieldTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/spin"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/spin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <RelativeLayout
        android:id="@+id/smallField"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/small_field"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/smallFieldTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/smallSpin"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/small_spin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smallField" />
</androidx.constraintlayout.widget.ConstraintLayout>